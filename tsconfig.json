{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "es2017",
      "dom",
      "dom.iterable"
    ],
    "removeComments": true,
    "preserveConstEnums": false,
    "sourceMap": true,
    "alwaysStrict": true,
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "noUnusedLocals": true,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "strict": false,
    "rootDirs": [ "src/" ],
    "outDir": "build",
    "rootDir": "src/",
    "baseUrl": "src/"
  },
  "files": [
    "src/sandbox/shell.ts",
    "src/sandbox/renderer.ts"
  ]
}