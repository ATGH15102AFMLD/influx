{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "lib": [
      "es7",
      "es2018",
      "dom",
      "dom.iterable"
    ],
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "allowUnreachableCode": true,
    "allowUnusedLabels": false,
    "baseUrl": "src/",
    "alwaysStrict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "outDir": "build",
    "preserveConstEnums": false,
    "pretty": false,
    "removeComments": true,
    "rootDir": "src/",
    "rootDirs": [
      "src/"
    ],
    "sourceMap": true,
    "strict": false
  },
  "files": [
    "src/sandbox/shell.ts",
    "src/sandbox/index.tsx"
  ]
}