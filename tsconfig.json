{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      // "webworker",
      // "webworker.importscripts"
    ],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "allowUnusedLabels": false,
    "baseUrl": "src",
    "alwaysStrict": true,
    "declaration": false,
    "declarationMap": false,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noFallthroughCasesInSwitch": false,
    "jsx": "react",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "outDir": "build",
    "preserveConstEnums": false,
    "pretty": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "rootDir": "src",
    "paths": {
      "@sandbox/*": [
        "sandbox/*"
      ],
      "@lib/*": [
        "lib/*"
      ]
    },
    "sourceMap": true,
    // "inlineSourceMap": true,
    // "inlineSources": true,
    "moduleResolution": "node",
    "strict": false,
    // IP: currently this option is needed for correct work with 'monaco-languageclient'
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  // "files": [
  //   "src/shell.ts",
  //   "src/sandbox/index.tsx"
  // ],
  "exclude": [
    "node_modules",
  ]
}