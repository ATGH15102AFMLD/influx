{
  "compilerOptions": {
    "module": "amd",
    "target": "es2017",
    "lib": ["es2017", "dom", "dom.iterable"],
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "allowJs": true,
    "pretty": true,
    "outFile": "./build/parser.js",
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "noUnusedLocals": true,
